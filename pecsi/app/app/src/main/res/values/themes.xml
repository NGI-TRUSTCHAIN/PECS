<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PECSi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_cyan_200</item>
        <item name="colorPrimaryVariant">@color/md_cyan_700</item>
        <item name="colorOnPrimary">@color/md_black_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_blue_200</item>
        <item name="colorSecondaryVariant">@color/md_blue_700</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PECSi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PECSi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PECSi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>